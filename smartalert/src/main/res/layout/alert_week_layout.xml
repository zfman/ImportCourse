                android:id="@+id/id_week_layout19"
                android:layout_width="0dp"
                android:clickable="true"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="19"/>
            <TextView 
                android:id="@+id/id_week_layout20"
                android:layout_width="0dp"
                android:clickable="true"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="20"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/id_weekalert_buttoncontainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/id_simplealert_cancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:background="@drawable/layout_press_style"
            android:clickable="true"
            android:orientation="vertical">
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/app_gray"
            android:text="取消"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/id_simplealert_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/layout_press_style"
            android:clickable="true"
            android:orientation="vertical">
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/app_orange"
            android:text="确认"/>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
