                android:id="@+id/id_week_layout5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:layout_height="match_parent"
                android:text="5"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/id_week_layout6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="6"/>
            <TextView 
                android:id="@+id/id_week_layout7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:layout_height="match_parent"
                android:text="7"/>
            <TextView 
                android:id="@+id/id_week_layout8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="8"/>
            <TextView 
                android:id="@+id/id_week_layout9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:layout_height="match_parent"
                android:text="9"/>
            <TextView 
                android:id="@+id/id_week_layout10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="10"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/id_week_layout11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:layout_height="match_parent"
                android:text="11"/>
            <TextView 
                android:id="@+id/id_week_layout12"
                android:layout_width="0dp"
