<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_25dp_white"
    android:id="@+id/id_top_bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="口令导入"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:textSize="15sp"
        android:textColor="@color/theme_black"
        android:text="口令是一段具有特殊格式的字符串，你可以复制课表口令后点击下方按钮进行导入!\n形如："/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/border_5_gray"
        android:textColor="@color/theme_black"
        android:text="哈喽，你收到了来自怪兽课表的分享！\n复制这条消息，打开「怪兽课表」即可导入#04feebbaf912c071e06ea057ed3d8d59"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/theme_black"
        android:text="在适配联盟内部，口令可以互通互导，目前支持以下几款应用："/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_btn_guaishou"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launch"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="怪兽课表"
                android:textSize="14sp"
                android:textColor="@color/theme_black"/>
            <TextView
                android:id="@+id/tv_guaishou_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="检测中"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_guaishou2"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launch"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="怪兽课表"
                android:textSize="14sp"
                android:textColor="@color/theme_black"/>
            <TextView
                android:id="@+id/tv_guaishou_install2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="检测中"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launch"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="怪兽课表"
                android:textSize="14sp"
                android:textColor="@color/theme_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="检测中"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launch"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="怪兽课表"
                android:textSize="14sp"
                android:textColor="@color/theme_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="检测中"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pop_import_token"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/app_white"
        android:background="@drawable/border_25_station_btn"
        android:gravity="center"
        android:text="从剪切板导入口令"/>
</LinearLayout>